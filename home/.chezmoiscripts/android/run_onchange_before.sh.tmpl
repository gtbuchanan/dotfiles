#!/data/data/com.termux/files/usr/bin/bash
PKG_PACKAGES=(
  "bash-completion"
  "eza"
  "fzf"
  "git-delta"
  "gnupg"
  "ncurses-utils"
  "nodejs-lts"
  "openssh"
  "ripgrep"
  "starship"
  "termux-api"
  "termux-services"
  "tmux"
  "tudo"
  "vim"
)
pkg update
pkg install -y $(printf "%s " "${PKG_PACKAGES[@]}")

# Install ble.sh
curl -L https://github.com/akinomyoga/ble.sh/releases/download/nightly/ble-nightly.tar.xz | tar -xJf - -C "$TMPDIR"
bash "$TMPDIR/ble-nightly/ble.sh" --install "$HOME/.local/share"
rm -Rf "$TMPDIR/ble-nightly"

# Imstall pnpm
npm i -g pnpm

# Install Nerd Font
curl -fsSL https://raw.githubusercontent.com/arnavgr/termux-nf/main/install.sh | bash
getnf -i "{{ .fontpack }}"
